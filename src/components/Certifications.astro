---
// Certifications section component

const certifications = [
  {
    name: "AMIS",
    logo: "/certificaciones/1.png"
  },
  {
    name: "CNSF",
    logo: "/certificaciones/2.png"
  },
  {
    name: "AMASFAC",
    logo: "/certificaciones/3.png"
  },
  {
    name: "ISO",
    logo: "/certificaciones/4.png"
  },
  {
    name: "CNSF",
    logo: "/certificaciones/5.png"
  },
  {
    name: "AMASFAC",
    logo: "/certificaciones/6.png"
  },
  {
    name: "ISO",
    logo: "/certificaciones/7.png"
  }
];
---

<section class="py-8 bg-rp-blue overflow-hidden">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-white text-center mb-12">Nuestras certificaciones</h2>
    
    <!-- Carrusel automático con efecto zoom -->
    <div class="relative">
      <div class="carousel-container" id="certificationsCarousel">
        <div class="carousel-track" id="carouselTrack">
          {/* Primera fila de imágenes */}
          {certifications.map((cert, index) => (
            <div class="carousel-item" data-cert-index={index}>
              <div class="cert-image-wrapper">
                <img 
                  src={cert.logo} 
                  alt={cert.name} 
                  class="cert-image w-24 h-24 md:w-40 md:h-40 object-contain transition-all duration-700 ease-in-out" 
                  loading="lazy"
                  width="160"
                  height="160"
                />
              </div>
            </div>
          ))}
          {/* Duplicamos las imágenes para efecto infinito */}
          {certifications.map((cert, index) => (
            <div class="carousel-item" data-cert-index={index + certifications.length}>
              <div class="cert-image-wrapper">
                <img 
                  src={cert.logo} 
                  alt={cert.name} 
                  class="cert-image w-24 h-24 md:w-40 md:h-40 object-contain transition-all duration-700 ease-in-out" 
                  loading="lazy"
                  width="160"
                  height="160"
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.carousel-container {
  overflow: visible;
  width: 100%;
  position: relative;
  padding: 60px 0;
}

.carousel-track {
  display: flex;
  animation: scroll 25s linear infinite;
  width: calc(180%);
}

.carousel-item {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120px;
  height: 120px;
  margin: 0 1.5rem;
  flex-shrink: 0;
  position: relative;
  overflow: visible;
}

.cert-image-wrapper {
  position: relative;
  transition: all 0.7s ease-in-out;
  border-radius: 12px;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.cert-image {
  transition: all 0.7s ease-in-out;
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

/* Efecto de zoom puro para imagen central */
.carousel-item.center-item .cert-image-wrapper {
  transform: scale(1.4);
  z-index: 20;
}

.carousel-item.center-item .cert-image {
  transform: scale(1);
}

/* Efecto de proximidad para imágenes cercanas */
.carousel-item.near-center .cert-image-wrapper {
  transform: scale(1.05);
}

.carousel-item.near-center .cert-image {
  transform: scale(1);
}

@media (min-width: 768px) {
  .carousel-item {
    min-width: 200px;
    height: 200px;
    margin: 0 2.5rem;
  }

  .carousel-item.center-item .cert-image-wrapper {
    transform: scale(1.4);
  }

  .carousel-item.near-center .cert-image-wrapper {
    transform: scale(1.25);
  }
}

@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

/* Pausar animación al hacer hover */
.carousel-track:hover {
  animation-play-state: paused;
}

/* Responsive */
@media (max-width: 767px) {
  .carousel-track {
    animation-duration: 20s;
  }
  
  .carousel-container {
    padding: 40px 0;
  }
  
  .carousel-item.center-item .cert-image-wrapper {
    transform: scale(1.3);
  }
  
  .carousel-item.near-center .cert-image-wrapper {
    transform: scale(1.1);
  }
}
</style>

<script>
  class CertificationsZoom {
    constructor() {
      this.carousel = document.getElementById('certificationsCarousel');
      this.track = document.getElementById('carouselTrack');
      this.items = Array.from(document.querySelectorAll('.carousel-item'));
      
      if (!this.carousel || !this.track || this.items.length === 0) {
        console.warn('Certifications carousel elements not found');
        return;
      }
      
      this.init();
    }

    init() {
      this.updateCenterItem();
      
      // Actualizar cada 100ms para suavidad
      this.intervalId = setInterval(() => {
        this.updateCenterItem();
      }, 100);

      // Pausar/reanudar en hover
      this.carousel.addEventListener('mouseenter', () => {
        this.track.style.animationPlayState = 'paused';
      });

      this.carousel.addEventListener('mouseleave', () => {
        this.track.style.animationPlayState = 'running';
      });

    }

    updateCenterItem() {
      const carouselRect = this.carousel.getBoundingClientRect();
      const centerX = carouselRect.left + carouselRect.width / 2;

      let closestItem = null;
      let minDistance = Infinity;

      this.items.forEach(item => {
        const itemRect = item.getBoundingClientRect();
        const itemCenterX = itemRect.left + itemRect.width / 2;
        const distance = Math.abs(centerX - itemCenterX);

        // Limpiar clases previas
        item.classList.remove('center-item', 'near-center');

        if (distance < minDistance) {
          minDistance = distance;
          closestItem = item;
        }

        // Agregar clase si está cerca del centro
        if (distance < carouselRect.width * 0.3) {
          item.classList.add('near-center');
        }
      });

      // Marcar el item más cercano como central
      if (closestItem && minDistance < carouselRect.width * 0.2) {
        closestItem.classList.add('center-item');
        closestItem.classList.remove('near-center');
      }
    }

    destroy() {
      if (this.intervalId) {
        clearInterval(this.intervalId);
      }
    }
  }

  // Inicializar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    const certZoom = new CertificationsZoom();
    
    // Limpiar al cambiar de página
    document.addEventListener('astro:before-preparation', () => {
      if (certZoom) {
        certZoom.destroy();
      }
    });
  });

  // Para compatibilidad con navegación de Astro
  document.addEventListener('astro:page-load', () => {
    new CertificationsZoom();
  });
</script>
