<footer class="bg-rp-blue text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      <div class="text-center md:text-left">
        <div class="bg-white p-2 rounded-lg inline-block mb-4">
          <Image 
            src={logoImage} 
            alt="Seguros RP" 
            class="h-8 md:h-10"
            width={120}
            height={40}
            format="png"
            loading="lazy"
            quality={95}
          />
        </div>
        <p class="text-gray-300 text-sm md:text-base">© 2024 Ramírez & Plascencia</p>
      </div>
      
      <div class="text-center md:text-left">
        <h3 class="text-base md:text-lg font-semibold mb-4">Enlaces</h3>
        <ul class="space-y-2">
          <li>
            <a 
              href="/politica-de-privacidad" 
              class="text-gray-300 hover:text-white transition duration-300 text-sm md:text-base relative"
            >
              Política de Privacidad
            </a>
          </li>
        </ul>
      </div>
      
      <div class="text-center md:text-left">
        <h3 class="text-base md:text-lg font-semibold mb-4">Síguenos</h3>
        <div class="flex justify-center md:justify-start space-x-4">
          {socialLinks.map((social) => (
            <a 
              href={social.href} 
              class="text-gray-300 hover:text-white hover:-translate-y-1 transition-all duration-300"
              aria-label={social.name}
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="w-5 h-5 md:w-6 md:h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon}></path>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
