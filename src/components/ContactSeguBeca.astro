                <strong>Â¡Perfecto, ${data.parentName}!</strong><br>
                <span style="font-size: 0.875rem;">Nuestro asesor especializado en seguros educativos te contactarÃ¡ en las prÃ³ximas 24 horas para diseÃ±ar el plan ideal para ${data.childName}.</span>
              </div>
            </div>
          `;
          formMessage.classList.remove('hidden');
          
          // Limpiar el formulario
          form.reset();

          // Scroll suave al mensaje
          formMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
          
        } else {
          // Error del servidor
          formMessage.className = 'p-4 rounded-lg mb-4 bg-red-100 text-red-800 border border-red-200';
          formMessage.textContent = result.error || result.message || 'Error al enviar el formulario. Por favor, intenta de nuevo.';
          formMessage.classList.remove('hidden');
        }
      } catch (error) {
        // Error de red
        console.error('Network error:', error);
        formMessage.className = 'p-4 rounded-lg mb-4 bg-red-100 text-red-800 border border-red-200';
        formMessage.innerHTML = `
          <div>
            <strong>Error de conexiÃ³n</strong><br>
            <span style="font-size: 0.875rem;">Por favor, verifica tu conexiÃ³n a internet e intenta de nuevo. Si el problema persiste, contÃ¡ctanos por WhatsApp.</span>
          </div>
        `;
        formMessage.classList.remove('hidden');
      } finally {
        // Restaurar el botÃ³n
        submitButton.disabled = false;
        buttonText.classList.remove('hidden');
        buttonLoading.classList.add('hidden');
      }
    });
  });
</script>
