<script is:inline>
  const initSegubecaForm = () => {
    const form = document.getElementById('segubecaForm');
    const formMessage = document.getElementById('formMessage');
    const submitButton = document.getElementById('submitButton');
    const buttonText = document.getElementById('buttonText');
    const buttonLoading = document.getElementById('buttonLoading');

    if (!(form instanceof HTMLFormElement) || !formMessage || !(submitButton instanceof HTMLButtonElement) || !buttonText || !buttonLoading) {
      console.error('Required form elements not found');
      return;
    }

    const whatsappInput = document.getElementById('whatsapp');
    if (whatsappInput instanceof HTMLInputElement) {
      whatsappInput.addEventListener('input', function () {
        this.value = this.value.replace(/[^0-9]/g, '');
        if (this.value.length > 10) {
          this.value = this.value.slice(0, 10);
        }
      });
    }

    const backgroundLayer = form.closest('section')?.querySelector('[data-bg]');
    if (backgroundLayer instanceof HTMLElement) {
      const loadBackground = () => {
        const bgUrl = backgroundLayer.dataset.bg;
        if (bgUrl && backgroundLayer.style.backgroundImage !== `url("${bgUrl}")`) {
          backgroundLayer.style.backgroundImage = `url('${bgUrl}')`;
        }
      };

      if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              loadBackground();
              observer.disconnect();
            }
          });
        });
        observer.observe(backgroundLayer);
      } else if ('requestIdleCallback' in window) {
        requestIdleCallback(() => loadBackground(), { timeout: 2000 });
      } else {
        setTimeout(() => loadBackground(), 0);
      }
    }

    form.addEventListener('submit', async function (event) {
      event.preventDefault();

      submitButton.disabled = true;
      buttonText.classList.add('hidden');
      buttonLoading.classList.remove('hidden');
      formMessage.classList.add('hidden');

      const formData = new FormData(form);
      const data = {
        parentName: String(formData.get('parentName') || ''),
        childName: String(formData.get('childName') || ''),
        parentAge: String(formData.get('parentAge') || ''),
        childAge: String(formData.get('childAge') || ''),
        monthlySavings: String(formData.get('monthlySavings') || ''),
        email: String(formData.get('email') || ''),
        whatsapp: String(formData.get('whatsapp') || ''),
        source: 'Segubeca Landing',
        campaign: 'Seguros Educativos'
      };

      if (data.whatsapp && data.whatsapp.length !== 10) {
        formMessage.className = 'p-4 rounded-lg mb-4 bg-red-100 text-red-800 border border-red-200';
        formMessage.textContent = 'El n√∫mero de WhatsApp debe tener exactamente 10 d√≠gitos';
        formMessage.classList.remove('hidden');
        submitButton.disabled = false;
        buttonText.classList.remove('hidden');
        buttonLoading.classList.add('hidden');
        return;
      }

      try {
        const response = await fetch('/api/segubeca-contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });

        const result = await response.json().catch(() => ({}));

        if (response.ok) {
          formMessage.className = 'p-4 rounded-lg mb-4 bg-green-100 text-green-800 border border-green-200';

          // Asegurar que GA4 est√© configurado antes de enviar eventos
          if (typeof window.gtag !== 'undefined') {
            window.gtag('config', 'G-Y67F0BJRHL', {
              'send_page_view': false
            });

            // Enviar evento de conversi√≥n segubeca_form a Google Analytics 4
            window.gtag('event', 'segubeca_form', {
              event_category: 'conversion',
              event_label: 'Segubeca Contact Form Submit',
              value: 1,
              currency: 'MXN'
            });
            
            console.log('Evento segubeca_form enviado');
          }

          // Eventos adicionales de tracking (no conversi√≥n)
          if (typeof window.gtag !== 'undefined') {
            window.gtag('event', 'generate_lead', {
              event_category: 'engagement',
              event_label: 'Segubeca Form',
              form_name: 'Segubeca Contact Form'
            });
          }

          if (result && result.details && Array.isArray(result.details.errors) && result.details.errors.length > 0) {
            formMessage.innerHTML = `
              <div style="display: flex; align-items: center; gap: 0.5rem;">
                <span style="font-size: 1.2rem;">‚úÖ</span>
                <div>
                  <strong>¬°Perfecto, ${data.parentName}!</strong><br>
                  <span style="font-size: 0.875rem;">Tu informaci√≥n fue guardada exitosamente. Nuestro asesor te contactar√° en las pr√≥ximas 24 horas para dise√±ar el plan ideal para ${data.childName}.</span>
                  <br><br>
                  <span style="font-size: 0.75rem; color: #d97706;">‚ÑπÔ∏è Nota: Algunas notificaciones autom√°ticas fallaron, pero tu solicitud fue procesada correctamente.</span>
                </div>
              </div>
            `;
          } else {
            formMessage.innerHTML = `
              <div style="display: flex; align-items: center; gap: 0.5rem;">
                <span style="font-size: 1.2rem;">üéâ</span>
                <div>
                  <strong>¬°Perfecto, ${data.parentName}!</strong><br>
                  <span style="font-size: 0.875rem;">Nuestro asesor especializado en seguros educativos te contactar√° en las pr√≥ximas 24 horas para dise√±ar el plan ideal para ${data.childName}.</span>
                </div>
              </div>
            `;
          }

          formMessage.classList.remove('hidden');
          form.reset();
          formMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
        } else {
          formMessage.className = 'p-4 rounded-lg mb-4 bg-red-100 text-red-800 border border-red-200';
          const errorMessage = (result && (result.error || result.message)) || 'Error al enviar el formulario. Por favor, intenta de nuevo.';
          formMessage.innerHTML = `
            <div>
              <strong>‚ùå Error</strong><br>
              <span style="font-size: 0.875rem;">${errorMessage}</span>
              ${result && result.details && Array.isArray(result.details.errors) ? `<br><br><span style="font-size: 0.75rem; color: #991b1b;">Detalles t√©cnicos: ${result.details.errors.join(', ')}</span>` : ''}
            </div>
          `;
          formMessage.classList.remove('hidden');
        }
      } catch (error) {
        console.error('Network/Connection error:', error);
        formMessage.className = 'p-4 rounded-lg mb-4 bg-red-100 text-red-800 border border-red-200';

        let errorMessage = 'Error de comunicaci√≥n con el servidor. Por favor, intenta de nuevo.';
        if (error && typeof error === 'object') {
          const name = 'name' in error ? String(error.name) : '';
          const message = 'message' in error ? String(error.message) : '';
          if (name === 'TypeError' && message.includes('fetch')) {
            errorMessage = 'Error de conexi√≥n. Verifica tu conexi√≥n a internet e intenta de nuevo.';
          } else if (name === 'AbortError') {
            errorMessage = 'La solicitud fue cancelada. Por favor, intenta de nuevo.';
          }
        }

        formMessage.innerHTML = `
          <div>
            <strong>üåê Error de Conexi√≥n</strong><br>
            <span style="font-size: 0.875rem;">${errorMessage}</span><br><br>
            <span style="font-size: 0.75rem;">Si el problema persiste, cont√°ctanos directamente por WhatsApp usando el bot√≥n verde en la parte inferior.</span>
          </div>
        `;
        formMessage.classList.remove('hidden');
      } finally {
        submitButton.disabled = false;
        buttonText.classList.remove('hidden');
        buttonLoading.classList.add('hidden');
      }
    });
  };

  if (document.readyState === 'complete') {
    if ('requestIdleCallback' in window) {
      requestIdleCallback(() => initSegubecaForm(), { timeout: 2000 });
    } else {
      setTimeout(() => initSegubecaForm(), 0);
    }
  } else {
    window.addEventListener('load', () => {
      if ('requestIdleCallback' in window) {
        requestIdleCallback(() => initSegubecaForm(), { timeout: 2000 });
      } else {
        setTimeout(() => initSegubecaForm(), 0);
      }
    }, { once: true });
  }
</script>
