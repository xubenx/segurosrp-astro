---
// Header component
import { Image } from 'astro:assets';
import logoImage from '../../public/logo.png';

const segurosIndividuales = [
  { 
    name: "Seguros de Salud", 
    href: "/seguros-salud",
    items: [
      { name: "Alfa Medical", href: "/seguros-salud/alfa-medical" },
      { name: "Alfa Medical Flex", href: "/seguros-salud/alfa-medical-flex" },
      { name: "Alfa Medical Internacional", href: "/seguros-salud/alfa-medical-internacional" },
      { name: "Accidentes Personales", href: "/seguros-salud/accidentes-personales" }
    ]
  },
  { 
    name: "Seguros de Vida", 
    href: "/seguros-vida",
    items: [
      { name: "Imagina Ser", href: "/seguros-vida/imagina-ser" },
      { name: "Orvi", href: "/seguros-vida/orvi" },
      { name: "Nuevo Plenitud", href: "/seguros-vida/nuevo-plenitud" },
      { name: "Objetivo Vida", href: "/seguros-vida/objetivo-vida" },
      { name: "Realiza", href: "/seguros-vida/realiza" },
      { name: "MÃ­o", href: "/seguros-vida/mio" },
      { name: "SeguBeca", href: "/seguros-vida/segubeca" },
      { name: "Se Adapta", href: "/seguros-vida/se-adapta" },
      { name: "Star Dotal", href: "/seguros-vida/star-dotal" },
      { name: "Legado", href: "/seguros-vida/legado" },
      { name: "Star Temporal", href: "/seguros-vida/star-temporal" },
      { name: "Vida Mujer", href: "/seguros-vida/vida-mujer" }
    ]
  }
];

const paginasPrincipales = [
  { name: "Inicio", href: "/" },
  { name: "Nosotros", href: "/nosotros" },
  { name: "Contacto", href: "/contact" }
];
---

<header class="bg-white shadow-lg fixed top-0 w-full z-50">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <div class="flex items-center">
        <Image 
          src={logoImage} 
          alt="Seguros RP" 
          class="h-12" 
          width={120}
          height={48}
          format="png"
          loading="eager"
          quality={95}
        />
      </div>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-8 items-center">
        <a href="/" class="text-rp-blue hover:text-rp-orange transition duration-300">Inicio</a>
        
        <!-- Seguros Individuales Dropdown -->
        <div class="relative group">
          <button class="text-rp-blue hover:text-rp-orange transition duration-300 flex items-center">
            Seguros Individuales
            <svg class="w-4 h-4 ml-1 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div class="absolute top-full left-0 mt-2 w-80 bg-white rounded-lg shadow-xl border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
            <div class="py-2">
              {segurosIndividuales.map((categoria) => (
                <div class="px-4 py-2">
                  <a href={categoria.href} class="font-semibold text-gray-800 hover:text-rp-orange transition duration-200 block mb-2">
                    {categoria.name}
                  </a>
                  <div class="pl-4 space-y-1">
                    {categoria.items.map((item) => (
                      <a 
                        href={item.href} 
                        class="block text-sm text-gray-600 hover:text-rp-orange transition duration-200"
                      >
                        {item.name}
                      </a>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <a href="/nosotros" class="text-rp-blue hover:text-rp-orange transition duration-300">Nosotros</a>
        <a href="#blog" class="text-rp-blue hover:text-rp-orange transition duration-300">Blog</a>
        <a href="/contact" class="text-rp-blue hover:text-rp-orange transition duration-300">Contacto</a>
      </div>
      
      <!-- CTA Button -->
      <button class="hidden md:block bg-rp-orange text-white px-6 py-2 rounded-full hover:bg-orange-600 transition duration-300">
        Cotiza ahora
      </button>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-rp-blue">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4">
      <a href="/" class="block py-2 text-rp-blue hover:text-rp-orange">Inicio</a>
      
      <!-- Mobile Seguros Individuales Section -->
      <div class="py-2">
        <!--<button id="mobile-seguros-individuales-toggle" class="flex items-center justify-between w-full text-rp-blue hover:text-rp-orange">
          <span>Seguros Individuales</span>
          <svg class="w-4 h-4 transition-transform" id="mobile-seguros-individuales-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>-->
        <div id="mobile-seguros-individuales-menu" class="hidden pl-4 mt-2 space-y-1">
          {segurosIndividuales.map((categoria) => (
            <div>
              <a href={categoria.href} class="block py-1 text-sm font-semibold text-gray-800 hover:text-rp-orange">
                {categoria.name}
              </a>
              <div class="pl-4 space-y-1">
                {categoria.items.map((item) => (
                  <a href={item.href} class="block py-1 text-xs text-gray-600 hover:text-rp-orange">
                    {item.name}
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      <a href="/nosotros" class="block py-2 text-rp-blue hover:text-rp-orange">Nosotros</a>
      <a href="#blog" class="block py-2 text-rp-blue hover:text-rp-orange">Blog</a>
      <a href="/contact" class="block py-2 text-rp-blue hover:text-rp-orange">Contacto</a>
      <button class="w-full mt-4 bg-rp-orange text-white px-6 py-2 rounded-full">Cotiza ahora</button>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
    
    // Mobile seguros individuales dropdown toggle
    const mobileSegurosIndividualesToggle = document.getElementById('mobile-seguros-individuales-toggle');
    const mobileSegurosIndividualesMenu = document.getElementById('mobile-seguros-individuales-menu');
    const mobileSegurosIndividualesArrow = document.getElementById('mobile-seguros-individuales-arrow');
    
    if (mobileSegurosIndividualesToggle && mobileSegurosIndividualesMenu && mobileSegurosIndividualesArrow) {
      mobileSegurosIndividualesToggle.addEventListener('click', function() {
        mobileSegurosIndividualesMenu.classList.toggle('hidden');
        mobileSegurosIndividualesArrow.classList.toggle('rotate-180');
      });
    }
  });
</script>
