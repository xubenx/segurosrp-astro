                  <label for="phone">📱 Teléfono / WhatsApp</label>
                  <input id="phone" name="phone" inputmode="tel" autocomplete="tel" required placeholder="+52 55 0000 0000" />
                </div>
                <div class="form-group">
                  <label for="city">🏙️ Ciudad</label>
                  <input id="city" name="city" autocomplete="address-level2" placeholder="Tu ciudad" />
                </div>
              </div>
              <div class="grid grid-2">
                <div class="form-group">
                  <label for="age">🎂 Rango de edad</label>
                  <select id="age" name="age" required>
                    <option value="">Selecciona tu edad...</option>
                    <option>18–24 años</option>
                    <option>25–34 años</option>
                    <option>35–44 años</option>
                    <option>45–54 años</option>
                    <option>55+ años</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="contact">💬 Preferencia de contacto</label>
                  <select id="contact" name="contact">
                    <option>WhatsApp (Preferido)</option>
                    <option>Llamada telefónica</option>
                    <option>Email</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label for="notes">💭 ¿Qué te gustaría proteger?</label>
                <textarea id="notes" name="notes" rows="3" placeholder="Mi familia, mi ingreso, etapa de embarazo, mis metas financieras..."></textarea>
