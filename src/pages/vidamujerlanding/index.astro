      ],
    })}></script>

    <style>
      /* Paleta femenina suave y elegante */
      :root { 
        --bg: linear-gradient(135deg, #fef7ff 0%, #fff1f2 50%, #fdf2f8 100%); 
        --bg-dark: #faf5ff;
        --card: rgba(255, 255, 255, 0.9); 
        --card-border: rgba(236, 72, 153, 0.1);
        --text-primary: #831843; 
        --text-secondary: #a855f7; 
        --muted: #9d174d; 
        --brand: #ec4899; /* rosa vibrante */
        --brand-2: #f472b6; /* rosa medio */
        --brand-3: #fbcfe8; /* rosa pastel */
        --brand-4: #fdf2f8; /* rosa muy claro */
        --accent: #fbbf24; /* dorado suave */
        --accent-2: #f59e0b; /* dorado más vibrante */
        --white: #ffffff;
        --shadow-soft: 0 4px 20px rgba(236, 72, 153, 0.15);
        --shadow-medium: 0 8px 25px rgba(236, 72, 153, 0.2);
        --shadow-strong: 0 12px 30px rgba(236, 72, 153, 0.25);
      }
      
      body { 
        margin: 0; 
        font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif; 
        color: var(--text-primary); 
        background: var(--bg);
        background-attachment: fixed;
        line-height: 1.6;
      }
      
      .container { 
        max-width: 1200px; 
        padding: 0 1.5rem; 
        margin: 0 auto; 
      }
      
      .btn { 
        display: inline-flex; 
        gap: .6rem; 
        align-items: center; 
        background: linear-gradient(135deg, var(--brand), var(--brand-2)); 
        color: var(--white); 
        padding: 1rem 1.5rem; 
        border-radius: 25px; 
        font-weight: 600; 
        text-decoration: none; 
        box-shadow: var(--shadow-medium);
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 0.95rem;
      }
      
      .btn:hover { 
        transform: translateY(-2px); 
        box-shadow: var(--shadow-strong);
        background: linear-gradient(135deg, #db2777, var(--brand));
      }
      
      .btn-outline { 
        border: 2px solid var(--brand-3); 
        color: var(--text-primary); 
        background: var(--white);
        padding: .9rem 1.3rem; 
        border-radius: 25px; 
        text-decoration: none; 
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-soft);
      }
      
      .btn-outline:hover {
        border-color: var(--brand);
        background: var(--brand-4);
        transform: translateY(-1px);
      }
      
      .btn-light { 
        background: var(--white); 
        color: var(--text-primary); 
        border-radius: 25px; 
        padding: .9rem 1.3rem; 
        text-decoration: none; 
        font-weight: 600; 
        box-shadow: var(--shadow-soft);
        transition: all 0.3s ease;
        border: 1px solid var(--card-border);
      }
      
      .btn-light:hover {
        box-shadow: var(--shadow-medium);
        transform: translateY(-1px);
        background: var(--brand-4);
      }
      
      .chip { 
        display: inline-flex; 
        gap: .4rem; 
        align-items: center; 
        font-size: .85rem; 
        padding: .5rem .9rem; 
        border-radius: 20px; 
        background: linear-gradient(135deg, var(--brand-4), var(--brand-3)); 
        color: var(--text-primary); 
        border: 1px solid var(--card-border);
        font-weight: 500;
        box-shadow: var(--shadow-soft);
      }
      
      .card { 
        background: var(--card); 
        border: 1px solid var(--card-border); 
        border-radius: 20px; 
        padding: 2rem; 
        box-shadow: var(--shadow-soft);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
      }
      
      .card:hover {
        box-shadow: var(--shadow-medium);
        transform: translateY(-2px);
      }
      
      .grid { 
        display: grid; 
        gap: 1.5rem; 
      }
      
      .grid-3 { 
        grid-template-columns: repeat(3, minmax(0, 1fr)); 
      }
      
      .grid-2 { 
        grid-template-columns: repeat(2, minmax(0, 1fr)); 
      }
      
      @media (max-width: 900px) { 
        .grid-3 { grid-template-columns: 1fr; } 
        .grid-2 { grid-template-columns: 1fr; } 
        .container { padding: 0 1rem; }
      }
      
      input, select, textarea { 
        width: 100%; 
        background: var(--white); 
        border: 2px solid var(--brand-3); 
        color: var(--text-primary); 
        padding: 1rem 1.2rem; 
        border-radius: 15px; 
        font-size: 0.95rem;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-soft);
      }
      
      input:focus, select:focus, textarea:focus {
        outline: none;
        border-color: var(--brand);
        box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.1);
      }
      
      label { 
        font-size: .9rem; 
        color: var(--text-primary); 
        display: block; 
        margin-bottom: .6rem; 
        font-weight: 500;
      }
      
      .badge { 
        display: inline-flex; 
        align-items: center; 
        gap: .5rem; 
        border: 1px solid var(--brand-3); 
        padding: .6rem 1rem; 
        border-radius: 25px; 
        font-size: .85rem; 
        color: var(--text-primary); 
        background: linear-gradient(135deg, var(--white), var(--brand-4));
        font-weight: 500;
        box-shadow: var(--shadow-soft);
      }
      
      .hero { 
        position: relative; 
        overflow: hidden; 
        padding: 4rem 0 3rem;
      }
      
      .hero::before { 
        content: ''; 
        position: absolute; 
        top: -50%; 
        left: -50%; 
        width: 200%; 
        height: 200%; 
        background: radial-gradient(ellipse at 30% 20%, rgba(236,72,153,.08), transparent 50%), 
                   radial-gradient(ellipse at 80% 30%, rgba(244,114,182,.06), transparent 40%),
                   radial-gradient(ellipse at 20% 80%, rgba(168,85,247,.05), transparent 45%); 
        z-index: -1; 
        animation: float 20s ease-in-out infinite;
      }
      
      @keyframes float {
        0%, 100% { transform: rotate(0deg) translate(0, 0); }
        33% { transform: rotate(120deg) translate(30px, -30px); }
        66% { transform: rotate(240deg) translate(-20px, 20px); }
      }
      
      .kpi { 
        font-weight: 700; 
        font-size: clamp(1.75rem, 3vw, 2.5rem); 
        color: var(--brand);
        background: linear-gradient(135deg, var(--brand), var(--text-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .muted { 
        color: var(--muted); 
      }
      
      .divider { 
        height: 1px; 
        background: linear-gradient(90deg, transparent, var(--brand-3), transparent); 
        margin: 3rem 0; 
      }
      
      .footer a { 
        color: var(--text-primary); 
        text-decoration: none; 
        transition: color 0.3s ease;
      }
      
      .footer a:hover {
        color: var(--brand);
      }
      
      .sticky-cta { 
        position: sticky; 
        top: 0; 
        z-index: 50; 
        background: rgba(255, 255, 255, 0.95); 
        backdrop-filter: blur(15px); 
        border-bottom: 1px solid var(--card-border);
        box-shadow: var(--shadow-soft);
      }
      
      .floating-wa { 
        position: fixed; 
        right: 25px; 
        bottom: 25px; 
        z-index: 60; 
      }
      
      .floating-wa a { 
        display: flex; 
        align-items: center; 
        gap: .6rem; 
        background: linear-gradient(135deg, #25d366, #128c7e); 
        color: var(--white); 
        padding: 1rem 1.3rem; 
        border-radius: 25px; 
        font-weight: 600; 
        box-shadow: 0 8px 25px rgba(37, 211, 102, 0.3);
        transition: all 0.3s ease;
        text-decoration: none;
      }
      
      .floating-wa a:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 30px rgba(37, 211, 102, 0.4);
      }
      
      .promo-ribbon { 
        display: inline-block; 
        padding: .4rem .8rem; 
        background: linear-gradient(135deg, var(--accent), var(--accent-2)); 
        color: var(--white); 
        border-radius: 15px; 
        font-weight: 600; 
        font-size: .8rem; 
        margin-bottom: 1rem;
        box-shadow: var(--shadow-soft);
      }
      
      h1, h2, h3 {
        color: var(--text-primary);
      }
      
      h1 {
        background: linear-gradient(135deg, var(--text-primary), var(--brand));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      /* Elementos decorativos */
      .decorative-element {
        position: absolute;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--brand-3), var(--brand-4));
        opacity: 0.6;
        animation: float 15s ease-in-out infinite;
      }
      
      .decorative-element:nth-child(1) {
        top: 10%;
        right: 10%;
        animation-delay: -5s;
      }
      
      .decorative-element:nth-child(2) {
        bottom: 20%;
        left: 5%;
        animation-delay: -10s;
        width: 40px;
        height: 40px;
      }
      
      /* Mejoras en formularios */
      .form-group {
        margin-bottom: 1.2rem;
      }
      
      button[type="submit"] {
        width: 100%;
      }
      
      /* Responsive mejoras */
      @media (max-width: 768px) {
        .hero {
          padding: 2rem 0;
        }
        
        .btn {
          padding: 0.8rem 1.2rem;
          font-size: 0.9rem;
        }
        
        .card {
          padding: 1.5rem;
        }
      }
    </style>
  </head>

