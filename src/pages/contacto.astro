import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/Contact.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contacto - Seguros RP">
  <main class="">
    
    <!-- Hero Section -->
    <Header/>
    
    <section class="bg-gradient-to-br from-rp-blue via-blue-800 to-rp-light-blue text-white py-16 lg:py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl lg:text-6xl font-bold mb-6 mt-10   leading-tight">
            <span class="text-yellow-400">Contáctanos</span>
