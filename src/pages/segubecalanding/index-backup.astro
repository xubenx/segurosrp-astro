  <style>
    /* Estilos optimizados para conversión */
    body {
      font-family: 'Poppins', sans-serif;
      line-height: 1.6;
    }

    /* HERO SECTION */
    .top_container {
      background-image: url('/segubecalanding/hero-bg.png');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      position: relative;
      min-height: 100vh;
      display: flex;
      align-items: center;
    }

    .top_container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(0, 123, 255, 0.8) 0%, rgba(40, 167, 69, 0.8) 100%);
      z-index: 1;
    }

    .hero_section {
      position: relative;
      z-index: 2;
      color: white;
      width: 100%;
      padding: 60px 0;
    }

    .hero_detail-box h1 {
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 25px;
      line-height: 1.1;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .hero_detail-box p {
      font-size: 1.3rem;
      margin-bottom: 35px;
      opacity: 0.95;
    }

    .hero_img-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .hero_img-container img {
      max-width: 100%;
      height: auto;
      filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));
    }

    /* BOTONES CTA */
    .call_to-btn {
      display: inline-block;
      padding: 15px 35px;
      font-size: 1.1rem;
      font-weight: 600;
      text-decoration: none;
      border-radius: 50px;
      transition: all 0.3s ease;
      margin: 5px;
      text-align: center;
      border: 2px solid;
    }

    .btn_white-border {
      background: transparent;
      border-color: white;
      color: white;
    }

    .btn_white-border:hover {
      background: white;
      color: #007bff;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(255,255,255,0.3);
    }

    .btn_primary {
      background: #28a745;
      border-color: #28a745;
      color: white;
    }

    .btn_primary:hover {
      background: #218838;
      border-color: #218838;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(40,167,69,0.4);
    }

    .btn_secondary {
      background: #007bff;
      border-color: #007bff;
      color: white;
    }

    .btn_secondary:hover {
      background: #0056b3;
      border-color: #0056b3;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0,123,255,0.4);
    }

    .btn_urgency {
      background: #dc3545;
      border-color: #dc3545;
      color: white;
      animation: pulse 2s infinite;
    }

    .btn_urgency:hover {
      background: #c82333;
      border-color: #c82333;
      color: white;
      transform: translateY(-2px);
    }

    @keyframes pulse {
      0% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7); }
      70% { box-shadow: 0 0 0 10px rgba(220, 53, 69, 0); }
      100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0); }
    }

    /* SECCIONES */
    .common_style {
      background: #f8f9fa;
    }

    .section {
      padding: 80px 0;
    }

    .section h3 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 25px;
      color: #333;
    }

    .section p {
      font-size: 1.1rem;
      margin-bottom: 30px;
      color: #666;
      line-height: 1.8;
    }

    .section img {
      max-width: 100%;
      height: auto;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    /* TESTIMONIOS */
    .client_section {
      background: white;
      padding: 80px 0;
    }

    .client_section h2 {
      font-size: 2.8rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 60px;
      color: #333;
    }

    .client_img-box img {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      object-fit: cover;
    }

    .client_detail-box h5 {
      color: #333;
      font-weight: 600;
      font-size: 1.3rem;
    }

    .client_detail-box p {
      color: #666;
      font-style: italic;
      font-size: 1.1rem;
    }

    /* URGENCIA */
    .urgency-banner {
      background: linear-gradient(45deg, #dc3545, #fd7e14);
      color: white;
      padding: 15px 0;
      text-align: center;
      font-weight: 600;
      font-size: 1.1rem;
    }

    /* FOOTER */
    .footer_section {
      background: #333;
      color: white;
      padding: 40px 0;
      text-align: center;
    }

    .footer_section a {
      color: #007bff;
      text-decoration: none;
    }

    /* BADGES */
    .badge-urgency {
      background: #dc3545;
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 600;
      margin-bottom: 15px;
      display: inline-block;
      animation: blink 1.5s infinite;
    }

    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0.7; }
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
      .hero_detail-box h1 {
        font-size: 2.5rem;
      }
      
      .section h3 {
        font-size: 2rem;
      }
      
      .call_to-btn {
        display: block;
        width: 100%;
        margin: 10px 0;
      }
    }
  </style>

