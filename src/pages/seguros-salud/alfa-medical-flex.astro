---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Contact from '../../components/Contact.astro';

const pageTitle = "Alfa Medical Flex - Seguro de Gastos Médicos Mayores Flexible | RP Seguros";
const pageDescription = "Seguro de Gastos Médicos Mayores Alfa Medical Flex: Tú decides dónde atenderte y cuánto pagas en cada evento. Acceso a todos los hospitales en convenio con flexibilidad total.";

// Datos estructurados para SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Alfa Medical Flex",
  "description": "Seguro de Gastos Médicos Mayores con libre elección de hospitales y participación flexible. Tú decides dónde atenderte y cuánto pagas en cada evento.",
  "brand": {
    "@type": "Brand",
    "name": "Seguros Monterrey New York Life"
  },
  "provider": {
    "@type": "Organization",
    "name": "RP Seguros",
    "url": "https://rpseguros.com.mx"
  },
  "category": "Seguro de Gastos Médicos Mayores",
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "price": "Consultar",
    "priceCurrency": "MXN"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5",
    "reviewCount": "1"
  }
};

// Breadcrumbs estructurados
const breadcrumbData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Inicio",
      "item": "https://rpseguros.com.mx/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Seguros de Salud",
      "item": "https://rpseguros.com.mx/seguros-salud"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Alfa Medical Flex",
      "item": "https://rpseguros.com.mx/seguros-salud/alfa-medical-flex"
    }
  ]
};

// FAQ estructurado
const faqData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Qué es Alfa Medical Flex?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Alfa Medical Flex es un Seguro de Gastos Médicos Mayores que te brinda total flexibilidad para elegir dónde atenderte y cuánto participar en cada evento médico. Te da acceso a todos los hospitales y médicos en convenio de Seguros Monterrey New York Life."
      }
    },
    {
      "@type": "Question",
      "name": "¿Puedo elegir cualquier hospital?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí, con Alfa Medical Flex tú decides en qué hospital atenderte. Tienes acceso a más de 800 médicos en convenio y los mejores hospitales de México. La flexibilidad es total."
      }
    },
    {
      "@type": "Question",
      "name": "¿Cómo funciona la participación flexible?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Tú administras cuánto pagas en cada evento médico según tus necesidades y presupuesto. Puedes elegir tu nivel de deducible y coaseguro, adaptando el plan a tu situación económica actual."
      }
    },
    {
      "@type": "Question",
      "name": "¿Qué cubre Alfa Medical Flex?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Cubre gastos médicos por accidente y enfermedad, incluyendo hospitalización, cirugías, consultas, tratamientos especializados, medicamentos, estudios de laboratorio y más. Incluye coberturas desde el primer día como COVID-19, apendicitis aguda e intoxicación alimentaria."
      }
    },
    {
      "@type": "Question",
      "name": "¿Cuál es la diferencia entre Alfa Medical y Alfa Medical Flex?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Alfa Medical tiene planes hospitalarios definidos según el tipo de hospital donde desees atenderte. Alfa Medical Flex te da acceso a TODOS los hospitales en convenio y tú decides tu participación en cada evento, brindándote mayor flexibilidad y control."
      }
    }
  ]
};
---

