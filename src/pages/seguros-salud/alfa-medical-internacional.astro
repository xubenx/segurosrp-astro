---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Contact from '../../components/Contact.astro';

const pageTitle = "Alfa Medical Internacional - Seguro de Gastos Médicos con Cobertura Mundial | RP Seguros";
const pageDescription = "Seguro de Gastos Médicos Mayores con cobertura internacional. Alfa Medical Internacional: atención médica en todo el mundo, ideal para viajeros frecuentes y expatriados.";

// Datos estructurados para SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Alfa Medical Internacional",
  "description": "Seguro de Gastos Médicos Mayores con cobertura internacional en todo el mundo. Ideal para viajeros frecuentes, expatriados y personas que necesitan atención médica global.",
  "brand": {
    "@type": "Brand",
    "name": "Seguros Monterrey New York Life"
  },
  "provider": {
    "@type": "Organization",
    "name": "RP Seguros",
    "url": "https://rpseguros.com.mx"
  },
  "category": "Seguro de Gastos Médicos Mayores Internacional",
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "price": "Consultar",
    "priceCurrency": "MXN"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5",
    "reviewCount": "1"
  }
};

// Breadcrumbs estructurados
const breadcrumbData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Inicio",
      "item": "https://rpseguros.com.mx/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Seguros de Salud",
      "item": "https://rpseguros.com.mx/seguros-salud"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Alfa Medical Internacional",
      "item": "https://rpseguros.com.mx/seguros-salud/alfa-medical-internacional"
    }
  ]
};

// FAQ estructurado
const faqData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Qué es Alfa Medical Internacional?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Alfa Medical Internacional es un Seguro de Gastos Médicos Mayores con cobertura mundial. Está diseñado para viajeros frecuentes, expatriados y personas que necesitan atención médica en cualquier parte del mundo, ofreciendo protección completa sin importar dónde te encuentres."
      }
    },
    {
      "@type": "Question",
      "name": "¿En qué países tiene cobertura Alfa Medical Internacional?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Alfa Medical Internacional ofrece cobertura en todo el mundo. Puedes recibir atención médica en hospitales y clínicas de Estados Unidos, Canadá, Europa, Asia, América Latina y cualquier otro destino internacional."
      }
    },
    {
      "@type": "Question",
      "name": "¿Es ideal Alfa Medical Internacional para expatriados?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí, Alfa Medical Internacional es perfecto para expatriados que viven fuera de México o viajan constantemente. Te brinda tranquilidad con cobertura médica completa sin importar en qué país te encuentres."
      }
    },
    {
      "@type": "Question",
      "name": "¿Qué beneficios tiene Alfa Medical Internacional?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Alfa Medical Internacional incluye: cobertura médica mundial, atención en hospitales de prestigio internacional, evacuación médica de emergencia, repatriación, asistencia 24/7 en cualquier idioma, y protección completa por accidente y enfermedad en el extranjero."
      }
    },
    {
      "@type": "Question",
      "name": "¿Puedo usar Alfa Medical Internacional en México?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí, Alfa Medical Internacional te cubre tanto en México como en el resto del mundo. Es la opción ideal si viajas frecuentemente pero también necesitas cobertura cuando estás en el país."
      }
    }
  ]
};
